<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Komunitas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="16sp"
    android:textDirection="firstStrongRtl"
    tools:context=".Faiz_MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-52dp">

        <ImageView
            android:layout_width="271dp"
            android:layout_height="254dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="65dp"
            android:src="@drawable/comunity"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/KomunitasAwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="100dp"
            android:text="Welcome to Community"
            android:textColor="#3198C6"
            android:textColorHighlight="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.545" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="340dp"
            android:layout_height="105dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="7dp"
            android:text="Menyatukan orang-orang dari lingkungan sekolah yang sama, dan banyak lagi. Buat grup berdasarkan topik untuk anggota dengan mudah.
"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/Button_next_faiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="40dp"
            android:text="Mulai"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="650dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>